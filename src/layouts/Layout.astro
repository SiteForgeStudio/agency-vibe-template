---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro'; // 1. IMPORT IT
import data from '../data/business.json';
import '../styles/vibe-system.css';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title || data.brand.name}</title>
</head>
<body data-vibe={data.settings.vibe} class="bg-[var(--bg-color)] text-[var(--text-primary)] font-[var(--font-main)] flex flex-col min-h-screen">
    
    <Navbar brand={data.brand} settings={data.settings} />

    <main class="flex-grow">
        <slot />
    </main>

    <Footer /> </body>
</html>