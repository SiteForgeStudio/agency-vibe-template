---
const { features } = Astro.props;
---

<section class="py-24 bg-[var(--bg-color)] border-t border-[var(--border)]">
  <div class="container px-6 mx-auto">
    <div class="grid gap-16 md:grid-cols-3">
      {features.map((feature) => (
        <div class="flex flex-col">
          <div class="mb-6">
            <span class="text-[10px] font-mono font-bold tracking-[0.3em] px-3 py-1 border border-[var(--accent)] text-[var(--accent)] uppercase">
              // {feature.icon_slug}
            </span>
          </div>
          
          <h3 class="mb-4 text-2xl font-bold text-[var(--text-primary)] uppercase tracking-tight">
            {feature.title}
          </h3>
          
          <p class="text-[var(--text-secondary)] leading-relaxed text-sm">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>