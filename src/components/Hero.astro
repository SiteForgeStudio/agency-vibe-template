---
/**
 * HERO COMPONENT
 * Part of the "Perfect Site" Engine
 */
 import { Image } from 'astro:assets';

const { brand, hero, id } = Astro.props;

// STRICT ISOLATION: Only look in the specific client folder
const allHeroImages = import.meta.glob('/clients/*/assets/images/*.{jpeg,jpg,png,gif,webp}');
const heroFileName = `${brand?.slug || id}-hero`;
const heroPath = Object.keys(allHeroImages).find((path) => 
  path.includes(`/clients/${id}/assets/images/`) && path.includes(heroFileName)
);

const heroImage = heroPath ? allHeroImages[heroPath] : null;
---

<section id="home" class="relative min-h-[90vh] flex items-center pt-20 overflow-hidden bg-[var(--bg-primary)]">
  <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center relative z-10">
    
    <div class="max-w-2xl">
      <div class="inline-block px-3 py-1 mb-6 border border-[var(--accent)] text-[var(--accent)] text-[10px] font-bold uppercase tracking-[0.3em] rounded-full">
        {brand?.tagline || "Industry Leader"}
      </div>
      
      <h1 class="text-6xl md:text-8xl font-black text-[var(--text-primary)] leading-[0.9] tracking-tighter mb-8 uppercase">
        {hero?.headline || brand?.name}
      </h1>
      
      <p class="text-xl text-[var(--text-secondary)] leading-relaxed mb-10 max-w-lg opacity-80">
        {hero?.subtext || "Premium services delivered with professional precision and unmatched quality."}
      </p>

      <div class="flex flex-wrap gap-4">
        <a href="#contact" class="px-8 py-4 bg-[var(--accent)] text-black font-black uppercase text-sm tracking-widest hover:brightness-110 transition-all">
          {hero?.cta || "Get Started"}
        </a>
      </div>
    </div>

    <div class="relative">
      <div class="aspect-[4/5] overflow-hidden rounded-2xl border border-[var(--border)] shadow-2xl relative">
        {heroImage && (
          <Image 
            src={heroImage()} 
            alt={brand?.name || "Hero Image"}
            width={1200}
            height={1500}
            class="object-cover w-full h-full scale-105"
            loading="eager"
          />
        )}
        <div class="absolute inset-0 bg-gradient-to-t from-[var(--bg-primary)] via-transparent to-transparent opacity-40"></div>
      </div>
    </div>
  </div>
</section>