---
import { Image } from "astro:assets";

const { clientId, business } = Astro.props;

const heroImage = await import(
  `../assets/generated/${clientId}/${clientId}-hero.jpg`
);
---

<section class="hero">

  <Image
    src={heroImage}
    alt={`${business.name} hero image`}
    width={1920}
    height={1080}

    format="avif"
    quality={85}

    loading="eager"
    fetchpriority="high"

    sizes="100vw"

    class="hero-image"
  />

  <div class="hero-content">
    <h1>{business.name}</h1>
    <p>{business.tagline}</p>
  </div>

</section>

<style>
.hero {
  position: relative;
}

.hero-image {
  width: 100%;
  height: auto;
  display: block;
}

.hero-content {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
</style>