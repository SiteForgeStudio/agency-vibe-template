---
/**
 * COMPONENT: Comparison
 * Logic: Contrast business value against "Traditional" methods.
 * Vibe: High-contrast split-screen.
 */
 const { comparison, intelligence } = Astro.props;

if (!comparison) return null;

const isTech = intelligence?.industry?.toLowerCase().includes('tech') || 
               intelligence?.industry?.toLowerCase().includes('ai');

const headline = comparison.headline || (isTech ? "System Advantage" : "The Difference");
---

<section id="comparison" class="py-24 bg-[var(--bg-card)] border-y border-[var(--border)]">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-6xl font-black uppercase tracking-tighter text-[var(--text-primary)]">
        {headline}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-px bg-[var(--border)] max-w-5xl mx-auto border border-[var(--border)] rounded-[var(--radius)] overflow-hidden">
      {/* Left Side: The Problem */}
      <div class="bg-[var(--bg-color)] p-12">
        <h3 class="text-xl font-bold uppercase mb-8 opacity-50">{comparison.left_title}</h3>
        <ul class="space-y-4">
          {comparison.left_items.map((item: string) => (
            <li class="flex items-center text-[var(--text-secondary)] text-sm italic">
              <span class="mr-3 text-red-500">✕</span> {item}
            </li>
          ))}
        </ul>
      </div>

      {/* Right Side: The Solution (Vibe-Engine) */}
      <div class="bg-[var(--bg-card)] p-12 border-l border-[var(--border)] relative">
        <div class="absolute top-4 right-4 text-[var(--accent)] text-[10px] font-bold tracking-widest uppercase animate-pulse">
          Recommended
        </div>
        <h3 class="text-xl font-bold uppercase mb-8 text-[var(--accent)]">{comparison.right_title}</h3>
        <ul class="space-y-4">
          {comparison.right_items.map((item: string) => (
            <li class="flex items-center text-[var(--text-primary)] font-bold text-sm">
              <span class="mr-3 text-[var(--accent)]">✓</span> {item}
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>