---
const { brand, settings } = Astro.props;
---

<nav class="sticky top-0 z-50 w-full border-b border-[var(--border)] bg-[var(--bg-color)]/80 backdrop-blur-md">
  <div class="container mx-auto px-6 py-4 flex items-center justify-between">
    
    <a href="/" class="text-xl font-black uppercase tracking-tighter text-[var(--text-primary)]">
      {brand.logo_text}
    </a>

    <div class="hidden md:flex items-center gap-8">
      {settings.menu.map((item) => (
        <a href={item.path} class="text-xs font-bold uppercase tracking-widest text-[var(--text-secondary)] hover:text-[var(--accent)] transition-colors">
          {item.label}
        </a>
      ))}
      <a href={settings.cta_link} class="px-6 py-2 text-[10px] font-bold uppercase tracking-[0.2em] border border-[var(--accent)] text-[var(--accent)] hover:bg-[var(--accent)] hover:text-[var(--bg-color)] transition-all rounded-[var(--radius)]">
        {settings.cta_text}
      </a>
    </div>

    <button id="menu-toggle" class="md:hidden text-[var(--text-primary)] focus:outline-none">
      <svg id="menu-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16" />
      </svg>
    </button>
  </div>

  <div id="mobile-menu" class="hidden absolute top-full left-0 w-full bg-[var(--bg-color)] border-b border-[var(--border)] p-6 flex flex-col gap-6 animate-in fade-in slide-in-from-top-4">
    {settings.menu.map((item) => (
      <a href={item.path} class="text-sm font-bold uppercase tracking-[0.3em] text-[var(--text-primary)]">
        {item.label}
      </a>
    ))}
    <a href={settings.cta_link} class="w-full text-center py-4 bg-[var(--accent)] text-[var(--bg-color)] text-[10px] font-bold uppercase tracking-[0.3em] rounded-[var(--radius)]">
      {settings.cta_text}
    </a>
  </div>
</nav>

<script>
  const btn = document.getElementById('menu-toggle');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
    menu?.classList.toggle('flex');
  });
</script>